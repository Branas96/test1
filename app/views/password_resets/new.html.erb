<h1> Forgot Your Password </h1>

<%= form_with url: password_reset_path, local:true do |form| %>


    <div class="mb-3">
        <%= form.label :email %>
        <%= form.text_field :email, class: "form-control", placeholder: "steve@apple.com", autocomplete: "username" %>
    </div>

    <div class="mb-3">
        <%= form.submit "Reset Password", class: "btn btn-primary", data: { disable_with: false } %>
    </div>

<% end %>